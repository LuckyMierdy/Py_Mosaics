<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link rel="stylesheet" type="text/css" href="style.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link
		rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	</head>
	<body>
		<header>
			<div class="d-flex flex-column">
				<img src="{{ asset('img/py logo.jpg') }}" class="align-self-center">
				<h1 class="align-self-center mb-5">Py_Mosaïcs</h1>
				{% if is_granted('IS_AUTHENTICATED_FULLY') %}
					<p class="login pe-5">
						Bienvenue
						{{ app.user.username }}
						|
						<a href="{{ path('logout') }}">logout</a>
					</p>
				{% else %}
					<a href="{{ path('login') }}">
						<img src="{{ asset('img/Bouton login.PNG') }}" class='login' alt="">
					</a>
				{% endif %}
				<nav class="navbar navbar-expand-lg navbar-light align-self-lg-center" id="navbar-relative">
					<div class="d-flex flex-column align-items-end">
						<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
							<span><img src="{{ asset('img/Menu déroulant.PNG') }}"></span>
						</button>
						<div class="collapse navbar-collapse" id="navbarSupportedContent">
							<ul class="navbar-nav me-auto">
								<li>
									<a href="{{ path('app_accueil') }}">Accueil</a>
								</li>
								<li>
									<a href="{{ path('app_projet_catalogue') }}">Projets</a>
								</li>
								<li>
									<a href="{{ path('app_galery_catalogue') }}">Galerie</a>
								</li>
								<li>
									<a href="{{ path('app_a_propos_de_moi') }}">A propos de moi</a>
								</li>
								{# <li>
																																																	<a href="#">Évènements</a>
																																																</li> #}
								<li>
									<a href="#">Contact</a>
								</li>
							</ul>
						</div>
					</div>
				</nav>
			</div>
			<div class="d-flex justify-content-center">
				<div class="trait"></div>
			</div>
			<div class="d-flex flex-column flex-lg-row align-items-center justify-content-center pt-2">
				{% if is_granted('ROLE_GERANT') %}
					<a href="{{ path('app_projet_index') }}">Gestion des projets</a>
					<a href="{{ path('app_galery_index') }}">Gestion de la galerie</a>
					{# <a href="">Gestion à propos de moi</a> #}
					{# <a href="">Gestion des évènements</a> #}
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<a href="{{ path('app_gerant_registration') }}">Créer un gérant</a>
				{% endif %}
			</div>
		</header>
		{% block body %}{% endblock %}
		<footer>
			<div class="d-flex justify-content-center mt-5">
				<div class="trait"></div>
			</div>
			<div class="d-flex align-items-center justify-content-around mt-5">
				<img src="{{ asset('img/py logo.jpg') }}" alt="">
				<div class="d-flex flex-column">
					<a class="lien-footer" href="{{ path('app_accueil') }}">Accueil</a>
					<a class="lien-footer" href="{{ path('app_projet_catalogue') }}">Projets</a>
					<a class="lien-footer" href="{{ path('app_galery_catalogue') }}">Galerie</a>
					<a class="lien-footer" href="{{ path('app_a_propos_de_moi') }}">À propos de moi</a>
					{# <a class="lien-footer" href="">Évènements</a> #}
					<a class="lien-footer" href="">Contact</a>
					<p></p>
				</div>
				<div>
					<a href="https://www.instagram.com/py_mosaics/?utm_source=qr">
						<img src="{{ asset('img/insta-removebg-preview.png') }}" alt="">
					</a>
				</div>
				<a href="https://py-ivy.tumblr.com/">
					<img src="{{ asset('img/trumbler-removebg-preview.png') }}" alt="">
				</a>
			</div>
		</footer>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
	</body>
</html>
