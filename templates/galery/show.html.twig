{% extends 'base.html.twig' %}

{% block title %}Galerie
{% endblock %}

{% block body %}
	<h2 class="text-center mt-5">Galerie</h2>

	<div class="d-flex flex-column align-items-center">
		<div class="d-flex align-items-center">
			<div class="pe-3">ID :</div>
			<div>{{ galery.id }}</div>
		</div>
		<div class="d-flex align-items-center">
			<div class="pe-3">Titre :</div>
			<div>{{ galery.title }}</div>
		</div>
		<div class="d-flex align-items-center">
			<div class="pe-3">Image1 :</div>
			<div><img class="galery_img_show" src="{{ asset('uploads/galerie/' ~ galery.image1) }}"/></div>
		</div>
		<div class="d-flex align-items-center">
			<div class="pe-3">Image2 :</div>
			<div><img class="galery_img_show" src="{{ asset('uploads/galerie/' ~ galery.image2) }}"/></div>
		</div>
		<div class="d-flex align-items-center">
			<div class="pe-3">Image3 :</div>
			<div><img class="galery_img_show" src="{{ asset('uploads/galerie/' ~ galery.image3) }}"/></div>
		</div>
	</div>


	<div class="d-flex flex-column align-items-center">
		<a class="my-4 button" href="{{ path('app_galery_edit', {'id': galery.id}) }}">Éditer le projet</a>
		<a href="{{ path('app_galery_index') }}">Retour à la liste des galeries</a>
		{{ include('galery/_delete_form.html.twig') }}
	</div>
{% endblock %}
