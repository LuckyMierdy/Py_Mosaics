{% extends 'base.html.twig' %}

{% block title %}S'enregistrer
{% endblock %}

{% block body %}
	<h2 class="text-center mt-5">S'enregistrer</h2>

	{{ form_start(registrationForm) }}
	<div class="d-flex flex-column align-items-center">
		<div class="pt-3">
			<label class='ps-2' for="email">Email :</label>
			{{ form_row(registrationForm.email, {
            label: ' '
        }) }}
		</div>
		<div class="pt-3">
			<label class='ps-2' for="username">Nom d'utilisateur :</label>
			{{ form_row(registrationForm.username, {
            label: ' '
        }) }}
		</div>
		<div class="pt-3">
			<label class='ps-2' for="plainPassword">Mot de passe :</label>
			{{ form_row(registrationForm.plainPassword, {
            label: ' '
        }) }}
		</div>
		<div class="d-flex align-items-center pt-3">
			<label class="ps-2 me-2" for="agreeTerms">Accepter les conditions :</label>
			{{ form_row(registrationForm.agreeTerms, {
            label: ' '
        }) }}
		</div>
		<button type="submit" class="button my-4">S'enregistrer</button>
	</div>
	{{ form_end(registrationForm) }}
{% endblock %}
