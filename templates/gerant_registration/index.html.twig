{% extends 'base.html.twig' %}

{% block title %}Enregistrer un gérant
{% endblock %}

{% block body %}
	<h2 class="text-center mt-5">Enregistrer un nouveau Gérant</h2>

	{{ form_start(gerantRegistration) }}
	<div class="d-flex flex-column align-items-center" style='width: 100%;'>
		<div class="pt-3">
			<label class='ps-2' for="email">Email :</label>
			{{ form_row(gerantRegistration.email, {
            label: ' '
        }) }}
		</div>
		<div class="pt-3">
			<label class='ps-2' for="username">Nom d'utilisateur :</label>
			{{ form_row(gerantRegistration.username, {
            label: ' '
        }) }}
		</div>
		<div class="pt-3">
			<label class='ps-2' for="plainPassword">Mot de passe :</label>
			{{ form_row(gerantRegistration.plainPassword, {
            label: ' '
        }) }}
		</div>
		<div class="d-flex align-items-center pt-3">
			<label class='ps-2' for="agreeTerms">Accepter les conditions :</label>
			{{ form_row(gerantRegistration.agreeTerms, {
            label: ' '
        }) }}
		</div>
		<div class="d-flex justify-content-center">
			<button type="submit" class="button mt-5">Enregistrer le gérant</button>
		</div>
		{{ form_end(gerantRegistration) }}

	</div>
{% endblock %}
